<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/item_back_button"
        android:layout_width="142dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"


        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/add_item_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_item_btn"
        android:layout_width="142dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"

        android:text="Add Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/category_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/item_grid_view"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>